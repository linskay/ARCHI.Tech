{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "orderId": {
      "type": "string",
      "format": "uuid"
    },
    "user": {
      "$ref": "#/definitions/User"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "itemId": {
            "type": "string"
          },
          "quantity": {
            "type": "integer"
          }
        },
        "required": ["itemId", "quantity"]
      }
    },
    "status": {
      "type": "string",
      "enum": ["PENDING", "COMPLETED", "CANCELED"]
    }
  },
  "required": ["user", "items", "status"],
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uuid"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      }
    }
  }
}
