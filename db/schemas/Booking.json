{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "bookingId": {
      "type": "string",
      "format": "uuid"
    },
    "workspace": {
      "$ref": "#/definitions/Workspace"
    },
    "user": {
      "$ref": "#/definitions/User"
    },
    "startTime": {
      "type": "string",
      "format": "date-time"
    },
    "endTime": {
      "type": "string",
      "format": "date-time"
    },
    "totalPrice": {
      "type": "number"
    },
    "status": {
      "type": "string",
      "enum": ["PENDING", "CONFIRMED", "CANCELED", "COMPLETED"]
    }
  },
  "required": ["workspace", "user", "startTime", "endTime", "totalPrice", "status"],
  "definitions": {
    "Workspace": {
      "type": "object",
      "properties": {
        "workspaceId": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "pricePerHour": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": ["AVAILABLE", "OCCUPIED", "UNDER_MAINTENANCE"]
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uuid"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phoneNumber": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["USER", "ADMIN"]
        }
      }
    }
  }
}
